import RPi.GPIO as GPIO
import time


GPIO_PIN = 18 
BOUNCE_TIME = 200  # Debounce time in milliseconds


def pulse_callback(channel):
    print("Pulse detected on channel {}".format(channel))


try:
    
    GPIO.setmode(GPIO.BCM)

 
    GPIO.setup(GPIO_PIN, GPIO.IN, pull_up_down=GPIO.PUD_DOWN)

    
    GPIO.add_event_detect(GPIO_PIN, GPIO.RISING, callback=pulse_callback, bouncetime=BOUNCE_TIME)

    print("Waiting for a pulse on GPIO pin {}...".format(GPIO_PIN))

   
    while True:
        time.sleep(10) 

except KeyboardInterrupt:
    print("\nExiting program...")
